{
  "name": "document-converter",
  "version": "1.0.0",
  "description": "Document to Markdown converter with rsync-like functionality",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "install-deps": "npm install",
    "setup-tools": "npm run setup-pandoc && npm run setup-unstructured",
    "setup-pandoc": "echo '请手动安装 Pandoc: https://pandoc.org/installing.html'",
    "setup-unstructured": "pip install unstructured[all-docs] || echo '请确保已安装 Python 和 pip'"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "mammoth": "^1.6.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "turndown": "^7.1.2",
    "ws": "^8.14.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "document",
    "converter",
    "markdown",
    "pdf",
    "docx",
    "rsync"
  ],
  "author": "",
  "license": "MIT"
}
